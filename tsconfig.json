{
  "compilerOptions": {
    "paths": {
      "@root/*": ["./*"],
      "@composer/*": ["./src/composer/*"],
      "@scenes/*": ["./src/scenes/*"]
    },
    "outDir": "./build",
    "rootDir": ".",
    "target": "es2016",                                  
    "module": "CommonJS",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                          
  },
  "include": ["src/**/*", "node.augmentations.d.ts", "bot.ts"],
  "exclude": ["node_modules"]
}
