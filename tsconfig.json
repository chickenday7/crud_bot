{
  "compilerOptions": {
    "paths": {
      "@root/*": ["./src/*"],
      "@composer/*": ["./src/composer/*"],
    },
    "outDir": "./dist",
    "rootDir": ".",
    "target": "es2016",                                  
    "module": "CommonJS",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                          
  },
  "include": ["src/**/*", "bot.ts"],
  "exclude": ["node_modules"]
}
